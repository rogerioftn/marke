<div class="jumbotron">
  <h1 class="display-4">Cadastro de Números</h1>
    
    <form action="/salvacontato" id="cadastro" method="POST">
     <br></br>
      <div class="form-group">
        <label for="numero">Nome</label>
        <input type="text" name="nome" id="nome" class="form-group">
      </div>
      <div class="form-group">
        <label for="numero">Fone</label>
        <input type="text"  name="fone" id="fone"   class="form-group">
      </div>
      <div class="form-group">
        <label for="numero">Lista Números</label>
        <textarea class="form-control" id="lista" name="lista" rows="3"></textarea>
        <div id="numeroencontrado">Número Encontrado na lista</div><br>
       <button type="button" onclick="clean('lista')" class="btn btn-primary">Buscar</button>
      </div>
      <button type="submit" id="salvar" class="btn btn-primary">Salvar</button>
    </form>
    {{{msg}}}
    
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">fone</th>
      <th scope="col">Data</th>
    </tr>
  </thead>
  <tbody>
    {{#each contatos}}
    <tr>
      
      <th scope="row">{{id}}</th>
      <td>{{nome}}</td>
      <td>{{fone}}</td>
      <td><a href="/deletar/{{id}}"><button >Deletar</button></a></td>
     
    </tr>
     {{/each}}
     
     {{{msgexclusao}}}
  </tbody>
</table>
  


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" >
<script  type="text/javascript">
    /*global editor */
    function clean(e){
      var numero;
    	var textfield = document.getElementById(e);
    	const regex = /^[1-9]\d{12}/;   //      /[1-9]\d{9}/
    	const reg = /^\s*|\s*$/g;
    	numero = textfield.value.substring(0,13);
    	//alert(numero);
    	//document.getElementById("numero").value = numero;
    	document.getElementById("numeroencontrado").innerHTML = numero;
    	
    	if(textfield.value.search(regex) > -1) {
    	  document.getElementById("nome").value = "dado";
    		document.getElementById("fone").value = numero;
    		textfield.value = textfield.value.replace(regex, "");
    		textfield.value = textfield.value.replace(reg,"");
    		document.getElementById("cadastro").submit();
        } 
    }
</script>    
    
    <title>SMS, Marketing!</title>
  </head>

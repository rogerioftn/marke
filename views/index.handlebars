  <script  type="text/javascript">
    function verifican(d){
      var numero;
      var i = 0;
    	var textfield = document.getElementById(d);
    	while (textfield.value != '' )
    	{
    	numero = textfield.value.substring(0,13);
    	document.getElementById("status").innerHTML += numero +"<br>";
    	
    	const regex = /^[1-9]\d{12}/;   //      /[1-9]\d{9}/
    	const reg = /^\s*|\s*$/g;
    		if(textfield.value.search(regex) > -1) {
    		textfield.value = textfield.value.replace(regex, "");
    		textfield.value = textfield.value.replace(reg,"");
    		i++;
        document.getElementById("numero").value = i;
        
        } 
        break;
    	}
    
    }
    </script>    

